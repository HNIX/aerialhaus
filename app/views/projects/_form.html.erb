<%= simple_form_for @project, :html => {:id => "contactForm"} do |f| %>
  <div class="row control-group">
    <div class="form-group col-xs-12  controls">
      <%= f.simple_fields_for :photos do |photo| %>
        <% if photo.object.new_record? %>
          <%= photo.input :image, as: :file %>
        <% else %>
          <%= image_tag a.object.image.url(:thumb) %>
          <%= a.input_field '_destroy', as: :boolean %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row contact-row">
    <div class="col-md-6">
      <div class="row control-group">
          <div class="form-group col-xs-12 controls">
              <%= f.input :title, :required => true, input_html: { class: 'form-control' }, placeholder: "Title", id: "title", label: 'Title' %>
          </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="row control-group">
          <div class="form-group col-xs-12 controls">
              <%= f.input :link, input_html: { class: 'form-control' }, placeholder: "Link", id: "link" %>
          </div>
      </div>
    </div>
  </div>
  <div class="row control-group">
      <div class="form-group col-xs-12  controls">
          <%= f.input :client, input_html: { class: 'form-control' }, placeholder: "Client" %>
      </div>
  </div>
  <div class="row control-group">
      <div class="form-group col-xs-12  controls">
          <%= f.input :description, :as => :text, input_html: { class: 'form-control' }, placeholder: "Description" %>
      </div>
  </div>
  <div class="row control-group">
      <div class="form-group col-xs-12 controls">
          <%= f.input :category, :required => true, collection: ["residential", "commercial"], input_html: { class: 'form-control' } %>
      </div>
  </div>
  </br>
  <div id="success"></div>
  <div class="row">
      <div class="form-group col-xs-12">
          <%= f.button :submit, 'Submit', :class=> "btn btn-theme-bg btn-lg" %>
      </div>
  </div>
<% end %>
