<% if flash[:alert] %>
  <div class="flash errors"><%= flash[:alert] %></div>
<% end %>

<% @body_id = 'signup' %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 col-xs-12">
    <div id="new-customer" class="panel panel-default">
      <div class="panel-heading">
        <h3><%= Spree.t(:new_customer) %></h3>
      </div>

      <div data-hook="signup" class="panel-body">
        <%= render partial: 'spree/shared/user_form' %>
        <hr />
        <%= Spree.t(:or) %>&nbsp;<%= link_to Spree.t(:login_as_existing), spree.login_path %>

      </div>

    </div>
  </div>
</div>
<div data-hook="login_extras"></div>
