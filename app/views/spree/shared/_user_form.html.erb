<%= form_for resource, as: :spree_user, url: spree.registration_path(resource) do |f| %>
  <div data-hook="signup_inside_form">
    <div class="form-group">
      <%= f.label :email, Spree.t(:email) %><br />
      <%= f.email_field :email, class: 'title form-control' %>
    </div>
    <div id="password-credentials">
      <div class="form-group">
        <%= f.label :password, Spree.t(:password) %><br />
        <%= f.password_field :password, class: 'title form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, Spree.t(:confirm_password) %><br />
        <%= f.password_field :password_confirmation, class: 'title form-control' %>
      </div>
    </div>

    <div data-hook="signup_below_password_fields"></div>

    <div class="actions"><%= f.submit Spree.t(:create), class: 'btn btn-success btn-block' %></div>
  </div>
<% end %>
