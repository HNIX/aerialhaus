<section class="video-section">
   <div class="overlay"></div>
   <div class="video-overlay">
       <div class="container text-center">
          <h1 class="typed-text">Aerial
                <span class="element" data-elements="Photography, Videos, Surveys, Haus"></span>
            </h1>
            <p class="lead">Premiere Nashville based aerial video and photography company.</p>
            <span class="parallax-buttons">
                <%= link_to 'View Our Work', main_app.projects_path, class:"btn btn-theme-bg btn-lg" %>
                <%= link_to 'Contact Us', main_app.contacts_path, class:"btn btn-default btn-lg" %>
            </span>
       </div>
   </div>
</section>
<%= content_for :javascript do %>
  <!-- //================Typed ========================================== -->
  <script>
    $(".element").each(function(){
        var $this = $(this);
        $this.typed({
        strings: $this.attr('data-elements').split(','),
        typeSpeed: 100, // typing speed
        backDelay: 3000 // pause before backspacing
        });
    });
  </script>


  <!-- //===============Video Background ================================ -->
  <script>
    $(".video-section").background({
      source: {
          poster: "https://s3-us-west-2.amazonaws.com/aerial-haus/images/NashBkgdVideoStill.jpg",
          mp4: "https://s3-us-west-2.amazonaws.com/aerial-haus/video/NashBkgdVideo.mp4"
      }
    });
  </script>

<% end %>
